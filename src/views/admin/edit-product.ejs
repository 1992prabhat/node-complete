<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <main>
    <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %> add-product <% } %>" method="POST" enctype="multipart/form-data">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <% if (editing) { %>
      <input type="hidden" value="<%= product._id %>" name="id">
      <% } %>
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing || hasError) { %><%= product.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="image">Image</label>
        <input type="file" name="image" id="image">
      </div>
      <div class="form-control">
        <label for="description">Description</label>
        <textarea row="5" name="description" id="description" resize="false"><% if (editing || hasError) { %><%= product.description %><% } %></textarea>
      </div>
      <div class="form-control">
        <label for="price">Price</label>
        <input type="text" name="price" id="price" value="<% if (editing || hasError) { %><%= product.price %><% } %>">
      </div>
      <!-- <div class="form-control">
						<label for="quantity">Quantity</label>
						<input type="number" name="quantity" id="quantity">
					</div> -->
      <div class="form-control">
        <button class="btn" type="submit">
          <% if (editing) { %> Update Product <% } else { %> Add Product <% } %>
        </button>
      </div>
    </form>
  </main>
  <%- include('../includes/end.ejs') %>